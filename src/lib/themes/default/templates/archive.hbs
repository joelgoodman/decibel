<div class="archive">
  <header class="archive-header">
    <div class="container">
      <h1 class="archive-title">{{title}}</h1>
      {{#if description}}
        <div class="archive-description">
          {{description}}
        </div>
      {{/if}}
    </div>
  </header>

  <div class="archive-content">
    <div class="container">
      <div class="post-grid">
        {{#each posts}}
          {{> post-card}}
        {{/each}}
      </div>

      {{> pagination}}
    </div>
  </div>
</div>