<nav class="pagination" role="navigation">
  {{#if prev}}
    <a href="{{page_url prev}}" class="pagination__prev">
      Previous
    </a>
  {{/if}}
  
  <span class="pagination__pages">
    Page {{page}} of {{pages}}
  </span>
  
  {{#if next}}
    <a href="{{page_url next}}" class="pagination__next">
      Next
    </a>
  {{/if}}
</nav>